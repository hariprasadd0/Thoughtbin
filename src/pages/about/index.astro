---
import Layout from "@/layouts/Layout.astro";
import Container from "@components/Container.astro";
import { Icon } from "astro-icon/components";
import Link from "@components/Link.astro";
---

<Layout title="About" description="about me">
  <Container>
    <div
      id="about-me"
      class="mx-auto my-10 flex max-w-4xl px-6 sm:px-8 lg:px-10"
    >
      <div>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-200">
          whoami
        </h2>
        <p class="mt-4 text-gray-600 dark:text-gray-400">
          <a
            href="https://hariprasadk.vercel.app/"
            class="underline underline-offset-2">nobody</a
          >
        </p>

        <div class="mt-6 flex items-center gap-4">
          <Link href="https://twitter.com/hariiprasad0"
            ><Icon name={"ion:logo-x"} class={"text-white/40 text-xl"} /></Link
          >
          <Link href="https://github.com/hariprasadd0">
            <Icon name={"ion:logo-github"} class={"text-white/40 text-xl"} />
          </Link>
          <Link href="#">
            <Icon name={"ion:logo-linkedin"} class={"text-white/40 text-xl"} />
          </Link>
        </div>
      </div>
    </div>
  </Container>
</Layout>
